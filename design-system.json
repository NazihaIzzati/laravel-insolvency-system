{
  "designSystem": {
    "name": "Clean White & Orange Design System",
    "version": "2.0.0",
    "description": "Clean, minimalist design system focused on white backgrounds with subtle orange accents for a professional and modern look",
    "created": "2024-01-15",
    "inspiration": "Clean White Professional Interface"
  },
  "colorPalette": {
    "primary": {
      "white-50": "#ffffff",
      "white-100": "#fefefe",
      "white-200": "#fdfdfd",
      "white-300": "#fcfcfc",
      "white-400": "#fafafa",
      "white-500": "#f8f8f8",
      "white-600": "#f5f5f5",
      "white-700": "#f0f0f0",
      "white-800": "#e8e8e8",
      "white-900": "#e0e0e0"
    },
    "neutral": {
      "gray-50": "#fafafa",
      "gray-100": "#f5f5f5",
      "gray-200": "#e5e5e5",
      "gray-300": "#d4d4d4",
      "gray-400": "#a3a3a3",
      "gray-500": "#737373",
      "gray-600": "#525252",
      "gray-700": "#404040",
      "gray-800": "#262626",
      "gray-900": "#171717"
    },
    "accent": {
      "orange-50": "#fff7ed",
      "orange-100": "#ffedd5",
      "orange-200": "#fed7aa",
      "orange-300": "#fdba74",
      "orange-400": "#fb923c",
      "orange-500": "#f97316",
      "orange-600": "#ea580c",
      "orange-700": "#c2410c",
      "orange-800": "#9a3412",
      "orange-900": "#7c2d12"
    },
    "primary": {
      "orange-50": "#fff7ed",
      "orange-100": "#ffedd5",
      "orange-200": "#fed7aa",
      "orange-300": "#fdba74",
      "orange-400": "#fb923c",
      "orange-500": "#f97316",
      "orange-600": "#ea580c",
      "orange-700": "#c2410c",
      "orange-800": "#9a3412",
      "orange-900": "#7c2d12"
    },
    "status": {
      "success": "#22c55e",
      "warning": "#f97316",
      "error": "#ef4444",
      "info": "#f97316"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Figtree, system-ui, sans-serif",
      "fallback": "system-ui, -apple-system, sans-serif"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem"
    },
    "fontWeights": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "scale": "0.25rem",
    "values": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "1rem"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "components": {
    "card": {
      "background": "#ffffff",
      "border": "1px solid #e5e5e5",
      "borderRadius": "0",
      "padding": "1.5rem",
      "shadow": "none",
      "hover": {
        "shadow": "none",
        "borderColor": "#d4d4d4"
      }
    },
    "button": {
      "primary": {
        "background": "#f97316",
        "color": "#ffffff",
        "border": "1px solid #f97316",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "borderRadius": "0",
        "hover": {
          "background": "#ea580c"
        }
      },
      "secondary": {
        "background": "#fefefe",
        "color": "#404040",
        "border": "1px solid #d4d4d4",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "borderRadius": "0",
        "hover": {
          "background": "#fdfdfd"
        }
      },
      "outline": {
        "background": "transparent",
        "color": "#737373",
        "border": "1px solid #e5e5e5",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "400",
        "borderRadius": "0",
        "hover": {
          "background": "#fafafa",
          "color": "#404040"
        }
      }
    },
    "input": {
      "background": "#ffffff",
      "border": "none",
      "borderBottom": "1px solid #d4d4d4",
      "padding": "0.5rem 0",
      "fontSize": "0.875rem",
      "color": "#171717",
      "focus": {
        "borderBottom": "1px solid #f97316",
        "outline": "none"
      },
      "placeholder": {
        "color": "#a3a3a3"
      }
    },
    "badge": {
      "background": "#f5f5f5",
      "color": "#404040",
      "padding": "0.25rem 0.5rem",
      "fontSize": "0.75rem",
      "fontWeight": "500",
      "borderRadius": "0",
      "variants": {
        "primary": {
          "background": "#fff7ed",
          "color": "#c2410c"
        },
        "success": {
          "background": "#f0fdf4",
          "color": "#15803d"
        },
        "warning": {
          "background": "#fff7ed",
          "color": "#c2410c"
        },
        "info": {
          "background": "#fff7ed",
          "color": "#c2410c"
        }
      }
    },
    "sidebar": {
      "background": "#ffffff",
      "border": "1px solid #e5e5e5",
      "width": "250px",
      "padding": "1.5rem",
      "active": {
        "background": "#fff7ed",
        "color": "#ea580c"
      }
    },
    "navigation": {
      "item": {
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "400",
        "color": "#737373",
        "hover": {
          "color": "#f97316",
          "background": "#fafafa"
        }
      }
    }
  },
  "patterns": {
    "dashboard": {
      "layout": "3-column grid",
      "sections": [
        "sidebar",
        "main-content",
        "stats-cards",
        "data-visualization",
        "detail-cards"
      ]
    },
    "dataDisplay": {
      "statCard": {
        "layout": "horizontal",
        "elements": ["icon", "label", "value"],
        "spacing": "1rem"
      },
      "listItem": {
        "layout": "horizontal",
        "elements": ["content", "badge", "action"],
        "spacing": "0.75rem"
      }
    },
    "forms": {
      "search": {
        "layout": "vertical",
        "elements": ["input", "button"],
        "spacing": "1rem"
      }
    }
  },
  "principles": {
    "minimalism": {
      "description": "Remove all non-essential elements",
      "guidelines": [
        "Use white backgrounds",
        "Minimize color usage",
        "Simple borders only",
        "No shadows or gradients",
        "Clean typography",
        "Ample whitespace"
      ]
    },
    "functionality": {
      "description": "Focus on essential information and actions",
      "guidelines": [
        "Clear information hierarchy",
        "Essential data only",
        "Simple navigation",
        "Minimal distractions",
        "Fast loading",
        "Accessible design"
      ]
    },
    "consistency": {
      "description": "Maintain uniform design patterns",
      "guidelines": [
        "Consistent spacing",
        "Uniform typography",
        "Standardized components",
        "Predictable interactions",
        "Cohesive color usage",
        "Regular grid system"
      ]
    }
  },
  "usage": {
    "dashboard": {
      "background": "#ffffff",
      "layout": "max-width container with padding",
      "sections": "Clear visual separation with borders",
      "typography": "Light weights for headings, regular for content"
    },
    "cards": {
      "background": "#ffffff",
      "border": "1px solid #e5e7eb",
      "padding": "1.5rem",
      "spacing": "1rem between cards"
    },
    "buttons": {
      "primary": "Black background for main actions",
      "secondary": "White background with gray border",
      "outline": "Transparent with subtle border"
    },
    "inputs": {
      "style": "Underline only, no borders",
      "focus": "Black underline",
      "placeholder": "Light gray text"
    }
  },
  "accessibility": {
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "focus": {
      "visible": "Clear focus indicators",
      "keyboard": "Full keyboard navigation"
    },
    "color": {
      "independent": "Information not conveyed by color alone",
      "sufficient": "High contrast ratios"
    }
  }
}
